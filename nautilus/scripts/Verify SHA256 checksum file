# Verify `sha256checksum.txt` within its current directory.
def main [...rest: string] {
    let file = $"($env.NAUTILUS_SCRIPT_CURRENT_URI? | default $env.PWD)/sha256checksum.txt"
    sha256sum --check $file
}
